  <b>Name:</b>
  <%=h @city.name %>
</p>

<p>
  <b>Country:</b>
  <%=h @city.country %>
</p>

<h1>Listing cities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Country</th>
  </tr>

<% @cities.each do |city| %>
  <tr>
    <td><a href="/impreza/city/<%= city.id %> "><%=h city.name %></a></td>
    <td><%=h city.country %></td>
    <td><%= link_to 'Show', city %></td>
    <td><%= link_to 'Edit', edit_city_path(city) %></td>
    <td><%= link_to 'Destroy', city, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New city', new_city_path %>

<%= render :partial => "clubs", :locals => {:clubs => @city.clubs} %>