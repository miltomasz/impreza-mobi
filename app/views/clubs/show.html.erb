                                    <input type="radio" name="radio" id="radio-choice-3" value="1"  />
                                    <label for="radio-choice-3">Yes!</label>
                        </fieldset>
                        <fieldset data-role="controlgroup">
                                    <input type="submit" value="Vote"  />
                        </fieldset>
                  </div>
            </form>
      </div>

